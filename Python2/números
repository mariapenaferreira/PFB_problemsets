num = int(input('Digite um número: '))

print('O número que será testado é ',num)

if num > 0:
	print('Positivo')
	if num < 50:
		if num%2 == 0:
			print('é um número par e menor que 50')
		else:
			print('o número é ímpar e menor que 50')
	elif num > 50:
		if num%2 == 0:
			print('é um número par maior que 50')
		else:
			print('é ímpar e maior que 50')
		if num%3 == 0:
			print('é um número maior que 50 e divisível por 3')
	else:
		print('o valor é igual a 50')		
elif num < 0:
	print('Negativo')
else:
	print('Valor nulo')
